# Copy to .env and set real values for production. Defaults in docker-compose work for local dev.

# PostgreSQL (used by Django services)
POSTGRES_USER=dbay_user
POSTGRES_PASSWORD=dbay_password
POSTGRES_DB=dbay

# MongoDB
MONGO_INITDB_ROOT_USERNAME=dbay_mongo_user
MONGO_INITDB_ROOT_PASSWORD=dbay_mongo_password

# AWS / LocalStack (used by listing, notification, search, messaging)
AWS_ENDPOINT_URL=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# Optional: override DATABASE_URL if not using default postgres user/pass/db
# DATABASE_URL=postgresql://user:pass@postgres:5432/dbay

# Optional: SQS queue URL for notifications
# SQS_QUEUE_URL=http://localstack:4566/000000000000/dbay-notifications

# Optional: MongoDB connection string for messaging service
# MONGO_URI=mongodb://user:pass@mongodb:27017/dbay?authSource=admin

# Optional: Redis and Memcached URLs
# REDIS_URL=redis://redis:6379/0
# MEMCACHED_URL=memcached:11211
