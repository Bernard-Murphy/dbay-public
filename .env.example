# Copy to .env and set real values for production. Defaults in docker-compose work for local dev.

# PostgreSQL (used by Django services)
POSTGRES_USER=dbay_user
POSTGRES_PASSWORD=dbay_password
POSTGRES_DB=dbay

# MongoDB
MONGO_INITDB_ROOT_USERNAME=dbay_mongo_user
MONGO_INITDB_ROOT_PASSWORD=dbay_mongo_password

# AWS / LocalStack (used by listing, notification, search, messaging)
AWS_ENDPOINT_URL=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# Optional: override DATABASE_URL if not using default postgres user/pass/db
# DATABASE_URL=postgresql://user:pass@postgres:5432/dbay

# Optional: SQS queue URL for notifications
# SQS_QUEUE_URL=http://localstack:4566/000000000000/dbay-notifications

# Optional: MongoDB connection string for messaging service
# MONGO_URI=mongodb://user:pass@mongodb:27017/dbay?authSource=admin

# Optional: Redis and Memcached URLs
# REDIS_URL=redis://redis:6379/0
# MEMCACHED_URL=memcached:11211

# --- Dogecoin / Wallet (real deposits/withdrawals need real xpub/xpriv and RPC) ---
# No full node download required when using a remote RPC.
# WALLET_MASTER_XPUB=    # BIP44 account-level xpub for deriving deposit addresses (prod: Secrets Manager)
# WALLET_MASTER_XPRIV=   # For signing withdrawals in BuildAndSignTx (prod: Secrets Manager)
# DOGECOIN_RPC_URL=http://dogecoin-node:22555
# DOGECOIN_RPC_USER=     # Optional Basic auth for RPC
# DOGECOIN_RPC_PASSWORD=
# USE_SYNC_WITHDRAWAL=1  # Set to 1 in local dev to process withdrawals synchronously (no Step Function)

# --- Frontend (Vite) ---
# VITE_API_BASE_URL=http://localhost:8080/api/v1  # or your API gateway base URL
# Cognito (set when using production auth)
# VITE_USE_COGNITO=false
# VITE_COGNITO_USER_POOL_ID=us-east-1_xxxxx
# VITE_COGNITO_CLIENT_ID=xxxxxxxxxxxx
# VITE_AWS_REGION=us-east-1
